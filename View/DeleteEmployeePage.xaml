<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UWO_DailyCustodian.View.DeleteEmployeePage"
             Title="Remove Employee Account">
    <VerticalStackLayout 
    Spacing="15"
    Padding="30,0"
    VerticalOptions="CenterAndExpand">

        <Label 
        Text="Enter the employee's email:"
        VerticalOptions="Center" 
        HorizontalOptions="Center" 
        FontSize="24"
        HorizontalTextAlignment="Center"/>

        <Entry x:Name="emailENT" Placeholder="Email"/>

        <Button Text="Remove Employee" Clicked="RemoveButtonClicked"/>
    </VerticalStackLayout>
</ContentPage>