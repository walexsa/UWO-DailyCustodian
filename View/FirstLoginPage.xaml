<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UWO_DailyCustodian.View.FirstLoginPage"
             Title="FirstLoginPage">
    <VerticalStackLayout
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Center">

        <Entry
            x:Name="emailENT"
            Placeholder="Email" />

        <Entry
            x:Name="passwordENT"
            Placeholder="Password"
            IsPassword="True"/>

        <Entry
            x:Name="password2ENT"
            Placeholder="Confirm Password"
            IsPassword="True"/>

        <Button
            Text="Sign Up"
            Clicked="OnSignUpBtnClicked"
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>